extends ../application.pug


block content


	body
		div(class="container")
			form(class="form-horizontal" action="/products/" + product.id  method="POST")
				input(type="hidden" name="_method" value="PUT")
				div(class="form-group")
					label(for="product-title" class="col-sm-2 control-label") Title
					div(class="col-sm-5")
						input(name="title" type="text" class="form-control" id = "product-title" value = product.title)
				div(class="form-group")
					label(for="product-price" class="col-sm-2 control-label") Price
					div(class="col-sm-5")
						input(name="price" type="text" class="form-control" id = "product-price" value = product.price)
				div(class="form-group")
					label(for="product-description" class="col-sm-2 control-label") Description
					div(class="col-sm-5")
						textarea(name="description" class="form-control" rows=5 id="product-description")= product.description
				div(class="form-group")
					div( class="col-sm-offset-2 col-sm-10" )
						button( type="submit" class="btn btn-default") Submit
